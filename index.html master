    <script>
        // Loading Screen
        window.addEventListener('load', function() {
            setTimeout(() => {
                document.getElementById('loading').classList.add('hide');
            }, 1500);
        });

        // Dynamic Counters
        function updateCounters() {
            const viewers = document.getElementById('viewers');
            const stock = document.getElementById('stock');
            const sold = document.getElementById('sold');
            const urgencyStock = document.getElementById('urgency-stock');
            const buyersToday = document.getElementById('buyers-today');
            
            // Simulate dynamic changes
            const currentViewers = parseInt(viewers.textContent);
            const currentStock = parseInt(stock.textContent);
            const currentSold = parseInt(sold.textContent);
            const currentBuyers = parseInt(buyersToday.textContent);
            
            // Random fluctuations
            viewers.textContent = Math.max(1000, currentViewers + Math.floor(Math.random() * 20) - 10);
            
            if(Math.random() < 0.3) { // 30% chance to decrease stock
                const newStock = Math.max(10, currentStock - 1);
                stock.textContent = newStock;
                urgencyStock.textContent = newStock;
                sold.textContent = currentSold + 1;
                
                if(Math.random() < 0.5) {
                    buyersToday.textContent = Math.min(49, currentBuyers + 1);
                }
            }
        }
        
        setInterval(updateCounters, 5000);

        // Countdown Timer
        function updateCountdown() {
            const now = new Date().getTime();
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(0, 0, 0, 0);
            const distance = tomorrow.getTime() - now;
            
            const hours = Math.floor(distance / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
        }
        
        setInterval(updateCountdown, 1000);
        updateCountdown();

        // Floating Notifications
        const notifications = [
            {name: "Sarah dari Jakarta", text: "Baru saja memesan 2 botol Crystal Shield Spray"},
            {name: "Budi dari Bandung", text: "Mendapatkan promo BELI 2 GRATIS 1"},
            {name: "Maya dari Surabaya", text: "Memesan 3 botol untuk keluarga besar"},
            {name: "Andi dari Medan", text: "Repeat order karena sangat puas"},
            {name: "Siti dari Yogyakarta", text: "Baru saja checkout dengan promo spesial"},
            {name: "Rahman dari Makassar", text: "Memesan untuk semua kamar mandi rumah"},
            {name: "Linda dari Semarang", text: "Sangat terkesan dengan hasilnya"},
            {name: "Agus dari Palembang", text: "Recommend ke teman-teman"}
        ];
        
        function showNotification() {
            const notification = document.getElementById('notification');
            const randomNotif = notifications[Math.floor(Math.random() * notifications.length)];
            
            document.getElementById('notification-name').textContent = randomNotif.name;
            document.getElementById('notification-text').textContent = randomNotif.text;
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 4000);
        }
        
        // Show notifications every 8-12 seconds
        function scheduleNextNotification() {
            const delay = Math.random() * 4000 + 8000; // 8-12 seconds
            setTimeout(() => {
                showNotification();
                scheduleNextNotification();
            }, delay);
        }
        
        scheduleNextNotification();

        // Smooth scrolling for CTA buttons
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add scroll animations
        function animateOnScroll() {
            const elements = document.querySelectorAll('.feature-card, .testimonial-card, .gallery-item');
            
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        }

        // Initialize scroll animations
        document.querySelectorAll('.feature-card, .testimonial-card, .gallery-item').forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(50px)';
            element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        });

        window.addEventListener('scroll', animateOnScroll);
        animateOnScroll();

        // Enhanced CTA tracking
        document.querySelectorAll('.cta-button').forEach(button => {
            button.addEventListener('click', function() {
                // Add some visual feedback
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
            });
        });

        // Add urgency to stock updates
        let lastStock = parseInt(document.getElementById('stock').textContent);
        setInterval(() => {
            const currentStock = parseInt(document.getElementById('stock').textContent);
            if (currentStock < lastStock) {
                // Flash effect when stock decreases
                const stockElements = document.querySelectorAll('#stock, #urgency-stock');
                stockElements.forEach(el => {
                    el.style.animation = 'flash 0.5s ease-in-out';
                    setTimeout(() => {
                        el.style.animation = '';
                    }, 500);
                });
                lastStock = currentStock;
            }
        }, 1000);

        // Add CSS for flash animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes flash {
                0%, 100% { background-color: transparent; }
                50% { background-color: rgba(255, 107, 107, 0.3); }
            }
        `;
        document.head.appendChild(style);

        // Mobile menu toggle (if needed)
        function checkMobile() {
            if (window.innerWidth <= 768) {
                document.body.classList.add('mobile');
            } else {
                document.body.classList.remove('mobile');
            }
        }
        
        window.addEventListener('resize', checkMobile);
        checkMobile();

        // Optimize performance
        let ticking = false;
        function requestTick() {
            if (!ticking) {
                requestAnimationFrame(animateOnScroll);
                ticking = true;
                setTimeout(() => ticking = false, 16);
            }
        }
        
        window.addEventListener('scroll', requestTick);

        // Add interaction analytics (placeholder)
        function trackInteraction(action, element) {
            console.log(`User ${action} on ${element}`);
            // Here you could send data to analytics service
        }

        // Track various interactions
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('cta-button')) {
                trackInteraction('clicked', 'CTA button');
            }
            if (e.target.closest('.feature-card')) {
                trackInteraction('viewed', 'feature card');
            }
        });

        // Add exit-intent popup (simplified version)
        let hasShownExitIntent = false;
        document.addEventListener('mouseleave', (e) => {
            if (e.clientY <= 0 && !hasShownExitIntent && window.scrollY > 500) {
                hasShownExitIntent = true;
                // Could show additional offer modal here
                console.log('Exit intent detected - could show special offer');
            }
        });

        // Lazy loading for images (basic implementation)
        const images = document.querySelectorAll('img[data-src]');
        const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    img.src = img.dataset.src;
                    img.classList.remove('lazy');
                    imageObserver.unobserve(img);
                }
            });
        });

        images.forEach(img => imageObserver.observe(img));

        // Add social proof counter
        let socialProofCount = 1247;
        setInterval(() => {
            if (Math.random() < 0.4) {
                socialProofCount += Math.floor(Math.random() * 3) + 1;
                document.getElementById('viewers').textContent = socialProofCount;
            }
        }, 3000);

    </script>
</body>
</html>
